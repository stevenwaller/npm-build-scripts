{
  "name": "bootstrap-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "PRIVATE",
  "private": true,
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "scripts": {
    "env": "env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run clean --silent && npm run build --silent && npm run serve --silent",
    "clean": "rimraf dist/*",
    "build": "npm-run-all --parallel build:*",
    "serve": "light-server --config .lightserverrc",
    "build:fonts": "cp -rf src/fonts dist/fonts",
    "build:images": "cp -rf src/images dist/images",
    "build:js": "webpack --mode development",
    "build:html": "cp -rf src/*.html dist",
    "build:styles": "npm-run-all styles:*",
    "styles:compile": "node-sass --source-map true src/styles/ --output dist/css",
    "styles:autoprefixer": "postcss dist/css/*.css --use autoprefixer --dir dist/css"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^4.1.3",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.11.1",
    "jquery": "^3.3.1",
    "json-loader": "^0.5.7",
    "light-server": "^2.5.1",
    "modernizr": "^3.6.0",
    "modernizr-loader": "^1.0.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "popper.js": "^1.14.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0"
  }
}
