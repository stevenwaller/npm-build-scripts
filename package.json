{
  "name": "bootstrap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "env": "env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:clean": "rimraf dist/*",
    "build:fonts": "cp -rf src/fonts dist/fonts",
    "build:images": "cp -rf src/images dist/images",
    "build:html": "cp -rf src/*.html dist",
    "build:scss-compile": "node-sass-chokidar --source-map true src/styles/ -o dist/css",
    "build:autoprefixer": "postcss dist/css/*.css --use autoprefixer -d dist/css",
    "sass:build": "npm-run-all --parallel build:*",
    "sass:watch": "chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'",
    "serve": "http-server -p 9090 dist/",
    "dev": "npm-run-all --parallel sass:* serve"
  },
  "author": "",
  "license": "PRIVATE",
  "dependencies": {
    "autoprefixer": "^9.0.1",
    "bootstrap": "^4.1.3",
    "chokidar-cli": "^1.2.0",
    "http-server": "^0.11.1",
    "jquery": "^3.3.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "popper.js": "^1.14.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2"
  }
}
