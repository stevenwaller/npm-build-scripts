{
  "name": "npm-build-scripts",
  "version": "1.0.0",
  "description": "Use NPM scripts to build a site",
  "main": "index.js",
  "author": "Steven Waller",
  "license": "MIT",
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean --silent && npm-run-all build:assets build:html build:sass build:autoprefixer \"build:js -- --mode production\"",
    "dev": "npm run clean --silent && npm-run-all --parallel watch serve",
    "clean": "rimraf dist/*.* dist/**/*.*",
    "watch": "make-dir dist && npm-run-all --parallel \"build:* -- --watch\"",
    "serve": "browser-sync start --server dist --files dist --no-ghost-mode --no-open",
    "build:assets": "cpx \"src/**/*.!(hbs|scss|js)\" dist",
    "build:html": "eleventy --config=eleventy.config.js",
    "build:sass": "node-sass-chokidar src/styles/ --source-map dist/css --output .temp --output-style compressed",
    "build:autoprefixer": "postcss .temp/*.css --use autoprefixer --dir dist/css",
    "build:lint": "esw src/scripts/{,**/}*.js",
    "build:js": "webpack"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "modernizr": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.6",
    "cpx": "^1.5.0",
    "eleventy": "^0.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-watch": "^4.0.2",
    "handlebars": "^4.0.11",
    "json-loader": "^0.5.7",
    "make-dir": "^1.3.0",
    "make-dir-cli": "^1.0.0",
    "modernizr-loader": "^1.0.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0"
  }
}
