{
  "name": "bootstrap-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "PRIVATE",
  "private": true,
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "scripts": {
    "env": "env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run clean --silent && npm-run-all --parallel build serve",
    "clean": "rimraf dist/*.* dist/**/*.*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\" --no-ghost-mode --no-open",
    "build": "make-dir dist && npm-run-all --parallel build:*",
    "build:fonts": "cp -rf src/fonts dist/fonts",
    "build:images": "cp -rf src/images dist/images",
    "build:html": "cp -rf src/*.html dist",
    "build:js": "webpack --mode development --watch",
    "build:sass": "node-sass-chokidar src/styles/ --source-map dist/css --output .temp --output-style compressed --watch",
    "build:autoprefixer": "postcss .temp/*.css --watch --use autoprefixer --dir dist/css"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "^4.1.3",
    "browser-sync": "^2.24.6",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.0",
    "jquery": "^3.3.1",
    "json-loader": "^0.5.7",
    "make-dir": "^1.3.0",
    "make-dir-cli": "^1.0.0",
    "modernizr": "^3.6.0",
    "modernizr-loader": "^1.0.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "popper.js": "^1.14.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0"
  }
}
